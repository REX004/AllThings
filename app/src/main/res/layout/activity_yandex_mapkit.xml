<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".YandexMapkitActivity">

    <com.yandex.mapkit.mapview.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/trackin_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Tracking Number"
        android:textSize="16sp"
        android:textColor="#3A3A3A"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sun"
            android:layout_marginStart="25dp"
            />
        <TextView
            android:id="@+id/track_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:fontFamily="@font/roboto_regular"
            android:text="R-7458-4567-4434-5854"
            android:textSize="16sp"
            android:textColor="#0560FA"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/pacage_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="Package Status"
            android:textSize="16sp"
            android:layout_marginStart="25dp"
            android:textColor="@color/grey"
            />


    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="20dp"
        android:layout_marginStart="25dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
         />
    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="20dp"
        android:layout_marginStart="25dp"
        android:layout_height="20dp"
        android:layout_marginTop="34dp"
        />
    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="20dp"
        android:layout_marginStart="25dp"
        android:layout_height="20dp"
        android:layout_marginTop="34dp"
        />
    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="20dp"
        android:layout_marginStart="25dp"
        android:layout_height="20dp"
        android:layout_marginTop="34dp"
        />
</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/courier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="Courier requested"
            android:textSize="14sp"
            android:layout_marginTop="9dp"
            android:layout_marginStart="7dp"
            android:textColor="@color/grey"
            />
        <TextView
            android:id="@+id/data_time1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="July 7 2022 08:00am"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="7dp"
            android:textColor="#EC8000"
            />
        <TextView
            android:id="@+id/ready_for_del"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="Package ready for delivery"
            android:textSize="14sp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="7dp"
            android:textColor="@color/grey"
            />
        <TextView
            android:id="@+id/data_time2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="July 7 2022 08:00am"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="7dp"
            android:textColor="#EC8000"
            />
        <TextView
            android:id="@+id/transit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="Package in transit"
            android:textSize="14sp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="7dp"
            android:textColor="@color/grey"
            />
        <TextView
            android:id="@+id/data_time3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="July 7 2022 08:00am"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="7dp"
            android:textColor="#EC8000"
            />
        <TextView
            android:id="@+id/delivered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="Package delivered"
            android:textSize="14sp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="7dp"
            android:textColor="@color/grey"
            />
        <TextView
            android:id="@+id/data_time4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="July 7 2022 08:00am"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="7dp"
            android:textColor="#EC8000"
            />
    </LinearLayout>
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:gravity="center">

    <Button
        android:id="@+id/button5"
        android:layout_width="342dp"
        android:layout_height="50dp"
        android:text="Button"
        android:gravity="center"
        android:backgroundTint="@color/blue_1"/>
</LinearLayout>

</LinearLayout>